# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# TypeScript JSX files
[*.tsx]
indent_style = space
indent_size = 2

# JavaScript files
[*.js]
indent_style = space
indent_size = 2

# JavaScript JSX files
[*.jsx]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML/YML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# TOML files (bunfig.toml)
[*.toml]
indent_style = space
indent_size = 2

# Configuration files
[.editorconfig]
indent_style = space
indent_size = 2

[.prettierrc*]
indent_style = space
indent_size = 2

[.eslintrc*]
indent_style = space
indent_size = 2

# Package manager files
[package.json]
indent_style = space
indent_size = 2

[package-lock.json]
indent_style = space
indent_size = 2

[bun.lockb]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2
insert_final_newline = false

# GitHub Actions workflows
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab
