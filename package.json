{
  "name": "elysia-user-api",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --outfile ./dist/server src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint:check": "eslint ./src",
    "eslint:fix": "eslint ./src --fix",
    "markdown-lint": "bunx markdownlint-cli '**/*.md' --ignore 'node_modules' --ignore 'dist'"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "latest",
    "elysia": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "bun-types": "latest",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "lefthook": "^2.0.13",
    "markdown-cli": "^1.6.0",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.52.0"
  }
}
